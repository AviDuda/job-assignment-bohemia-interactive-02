{
    "files.associations": {
        "*.css": "tailwindcss",
    },

    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    },
    "[javascript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    },

    "eslint.enable": true,

    "files.exclude": {
        ".next": true,
    },
    "typescript.tsdk": "node_modules/typescript/lib",
}
